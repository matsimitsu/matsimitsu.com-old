- is_embedded ||= false

%article.article
  %header
    %time{:datetime => item[:created_at]}
      = article_time_month(item[:created_at])
      %span= article_time_day(item[:created_at])
  %h1
    - if is_embedded
      %a{:href => route_path(item)}= item[:title]
    - else
      = item[:title]

  != content || partial(item)